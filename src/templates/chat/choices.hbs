<div class="foundry-ink chat-card">

    <div class="ink-text">
        {{#each lines}}{{this}}{{#unless @last}}<br><br>{{/unless}}{{/each}}
    </div>

    <div class="choice-buttons">
        {{#each choices}}
        <button data-index="{{this.index}}" class="ink-choice">{{this.text}}</button>
        {{/each}}
    </div>

</div>